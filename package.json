{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vue-codemirror6",
  "version": "0.3.7",
  "description": "CodeMirror6 Component for vue3",
  "keywords": [
    "vuejs",
    "vue",
    "vue-components",
    "vue-codemirror",
    "code-editor",
    "text-editor",
    "vue3",
    "web-editor",
    "vue-plugin",
    "vue-component",
    "codemirror-editor",
    "vue-resource",
    "codemirror6"
  ],
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vue-codemirror6",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vue-codemirror6.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vue-codemirror6/issues"
  },
  "engines": {
    "node": ">=16.15.0",
    "yarn": ">=1.22.4"
  },
  "license": "MIT",
  "main": "./dist/vue-codemirror6.umd.js",
  "module": "./dist/vue-codemirror6.es.js",
  "browser": {
    "./sfc": "./src/components/CodeMirror.vue"
  },
  "exports": {
    ".": {
      "import": "./dist/vue-codemirror6.es.js",
      "require": "./dist/vue-codemirror6.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "/dist",
    "/src/components/CodeMirror.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "clean": "rimraf node_modules/.vite && npx vue-demi-fix",
    "build": "vite build & vue-tsc --declaration --emitDeclarationOnly",
    "build:analyze": "vue-tsc --noEmit && vite build --mode analyze",
    "build:docs": "vite build --config vite.config.docs.ts",
    "build:clean": "rimraf dist",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:markup": "vue-tsc --noEmit",
    "preview": "vite preview --config vite.config.docs.ts",
    "prepare": "husky install",
    "postinstall": "npx vue-demi-fix"
  },
  "dependencies": {
    "vue-demi": ">=0.12.5"
  },
  "peerDependencies": {
    "@codemirror/basic-setup": ">=0.20",
    "@codemirror/state": ">=0.20",
    "@codemirror/view": ">=0.20",
    "vue": "^2.6.14 || ^3.2.36"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/lang-markdown": "^0.20.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.0.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "^0.3.38",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "prettier-plugin-sort-imports": "^1.6.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-plugin-checker": "^0.4.6",
    "vue": "^3.2.36",
    "vue-eslint-parser": "^9.0.2",
    "vue-tsc": "^0.34.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,htm,html}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*": "prettier -w -u"
  }
}
